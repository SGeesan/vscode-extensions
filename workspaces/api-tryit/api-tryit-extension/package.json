{
  "name": "api-tryit",
  "displayName": "WSO2 API TryIt",
  "description": "An extension for testing and trying out APIs",
  "icon": "resources/images/api-tryit-icon.png",
  "version": "1.0.0",
  "publisher": "wso2",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "api-tryit",
          "title": "WSO2 API TryIt",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "api-tryit": [
        {
          "id": "api-tryit.explorer",
          "name": "API Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "api-tryit.openTryIt",
        "title": "API TryIt: Open TryIt Panel",
        "icon": "$(globe)"
      },
      {
        "command": "api-tryit.newRequest",
        "title": "New Request",
        "icon": "$(add)"
      },
      {
        "command": "api-tryit.refreshExplorer",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "api-tryit.newCollection",
        "title": "New Collection",
        "icon": "$(new-folder)"
      },
      {
        "command": "api-tryit.settings",
        "title": "Settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "api-tryit.hello",
        "title": "API TryIt: Hello World"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "api-tryit.newRequest",
          "when": "view == api-tryit.explorer",
          "group": "navigation@1"
        },
        {
          "command": "api-tryit.refreshExplorer",
          "when": "view == api-tryit.explorer",
          "group": "navigation@2"
        },
        {
          "command": "api-tryit.newCollection",
          "when": "view == api-tryit.explorer",
          "group": "navigation@3"
        },
        {
          "command": "api-tryit.settings",
          "when": "view == api-tryit.explorer",
          "group": "navigation@4"
        }
      ],
      "commandPalette": [
        {
          "command": "api-tryit.openTryIt"
        },
        {
          "command": "api-tryit.newRequest",
          "when": "false"
        },
        {
          "command": "api-tryit.refreshExplorer",
          "when": "false"
        },
        {
          "command": "api-tryit.newCollection",
          "when": "false"
        },
        {
          "command": "api-tryit.settings",
          "when": "false"
        }
      ]
    },
    "languageModelTools": [
      {
        "name": "api-try-tool",
        "displayName": "API Try Tool",
        "modelDescription": "A tool to make requests to a given API endpoint. Provide the endpoint URL and request details to get a response. Useful for testing and debugging APIs.",
        "userDescription": "Try API endpoints",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "API-try-tool",
        "when": "true",
        "inputSchema": {
          "type": "object",
          "properties": {
            "collectionName": {
              "type": "string",
              "description": "Provide a collection name to save the request under that collection. Use a name that would help agregate similar requests based on the service, operation, or any other relevant criteria."
            },
            "method": {
              "type": "string",
              "description": "HTTP method to use for the request (e.g., GET, POST, PUT, DELETE)."
            },
            "url": {
              "type": "string",
              "description": "The full URL of the API endpoint to which the request is to be made."
            },
            "headers": {
              "type": "object",
              "description": "A key-value pair object representing the headers to include in the request."
            },
            "body": {
              "type": "string",
              "description": "The body of the request, typically used with POST and PUT methods. Do not include when not needed."
            }
          },
          "required": ["method", "url","collectionName" ]
        }
      }
    ],
    "chatParticipants": [
      {
        "id": "api.tryit.assistant",
        "name": "api-tryit-assistant",
        "fullName": "API Try It Assistant",
        "description": "An assistant that helps users test and debug APIs usin the openapi specification",
        "isSticky": true,
        "commands": [
          {"name": "tryAPI",
        "description": "Try the APIs defined in OpenAPI specification"}
        ]
      }
    ],
    "mcpServerDefinitionProviders": [
      {
        "id": "api.tryit.mcpServer",
        "label": "API TryIt MCP Server"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "build": "pnpm run lint && pnpm run compile",
    "copyVSIXToRoot": "copyfiles -u 0 \"vsix/*.vsix\" ../../../"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "typescript": "5.8.3",
    "ts-loader": "~9.5.1",
    "webpack": "~5.98.0",
    "webpack-cli": "~6.0.1",
    "copyfiles": "~2.4.1",
    "dotenv": "^16.4.7",
    "@wso2/api-tryit-visualizer": "workspace:*"
  },
  "dependencies": {
    "@wso2/api-tryit-core": "workspace:*",
    "@wso2/api-tryit-rpc-client": "workspace:*",
    "axios": "^1.12.2",
    "@vscode/chat-extension-utils": "^0.0.0-alpha.5",
    "vscode-messenger": "^0.5.1",
    "vscode-messenger-common": "^0.5.1",
    "xstate": "^4.38.3"
  }
}
